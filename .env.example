# Langdock API Configuration (required for LangdockBackend)
LANGDOCK_API_KEY=sk-your-api-key-here

# API Endpoints
LANGDOCK_UPLOAD_URL=https://api.langdock.com/attachment/v1/upload
LANGDOCK_ASSISTANT_URL=https://api.langdock.com/assistant/v1/chat/completions

# Optional: Default OCR Model
LANGDOCK_OCR_MODEL=claude-sonnet-4-5@20250929

# Gemini API Configuration (optional, for GeminiBackend)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_OCR_MODEL=gemini-2.5-flash

# Tesseract Configuration (optional, for TesseractBackend)
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=deu+eng

# Service Configuration (for FastAPI service)
MAX_FILE_SIZE_MB=50
MAX_PAGES=100
DEFAULT_QUALITY=balanced
